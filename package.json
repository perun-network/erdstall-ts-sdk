{
  "name": "@polycrypt/erdstall",
  "version": "0.1.0",
  "description": "SDK to interact with Erdstall Layer-2 Networks",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*/index.js"
  },
  "imports": {
    "#erdstall/*": "./dist/*/index.js"
  },
  "typesVersions": {
    "*": {
      "*": [ "dist/*", "dist/*/index.d.ts" ]
    }
  },
  "repository": "github:perun-network/erdstall-ts-sdk",
  "author": "Norbert Dzikowski <norbert@perun.network> (https://polycry.pt/)",
  "contributors": [
    "Steffen Rattay <steffen@perun.network>",
    "Sebastian Stammler <seb@perun.network>"
  ],
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.16",
    "@types/ganache-core": "^2.7.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.3.1",
    "ethers-utils": "^2.1.11",
    "fp-ts": "^1.19.3",
    "ganache-cli": "^6.12.2",
    "ganache-core": "^2.13.2",
    "hardhat": "^2.4.0",
    "hardhat-waffle": "^0.0.1-security",
    "jsdom": "^16.6.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.3.2",
    "mocha-suppress-logs": "^0.3.1",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "truffle": "^5.3.7",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.10.1",
    "typechain": "^4.0.3",
    "typedjson": "^1.7.0",
    "typescript": "^4.2.4",
    "ws": "^7.4.5"
  },
  "scripts": {
    "build": "npx tsc",
    "watch": "npx tsc -w",
    "lint": "npx eslint ./src --ext .ts",
    "bindings": "./scripts/genbindings.sh deps/erdstall-contracts",
    "test": "env TS_NODE_PROJECT=\"tsconfig.test.json\" mocha --timeout 15000 -r jsdom-global/register -r ts-node/register -r tsconfig-paths/register 'src/**/*.spec.ts'"
  },
  "dependencies": {
    "number-generator": "^4.0.5"
  }
}
