{
  "name": "@polycrypt/erdstall",
  "version": "0.1.0",
  "description": "SDK to interact with Erdstall Layer-2 Networks",
  "main": "./index.js",
  "exports": {
    ".": "./index.js",
    "./enclave": "./enclave/index.js",
    "./api": "./api/index.js",
    "./api/transactions": "./api/transactions/index.js",
    "./api/responses": "./api/responses/index.js",
    "./api/calls": "./api/calls/index.js",
    "./api/util": "./api/util/index.js",
    "./ledger": "./ledger/index.js",
    "./ledger/assets": "./ledger/assets/index.js",
    "./test": "./test/index.js",
    "./test/assets": "./test/assets/index.js",
    "./utils": "./utils/index.js",
    "./utils/arrays": "./utils/arrays/index.js",
    "./export/typedjson": "./export/typedjson.js"
  },
  "imports": {
    "#erdstall/*": "./*/index.js"
  },
  "repository": "github:perun-network/erdstall-ts-sdk",
  "author": "Norbert Dzikowski <norbert@perun.network> (https://polycry.pt/)",
  "contributors": [
    "Steffen Rattay <steffen@perun.network>",
    "Sebastian Stammler <seb@perun.network>"
  ],
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.16",
    "@types/ganache-core": "^2.7.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "chai": "^4.3.4",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ethereum-waffle": "^3.4.0",
    "fp-ts": "^1.19.3",
    "ganache-cli": "^6.12.2",
    "ganache-core": "^2.13.2",
    "hardhat": "^2.4.0",
    "hardhat-waffle": "^0.0.1-security",
    "jsdom": "^16.6.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.3.2",
    "mocha-suppress-logs": "^0.3.1",
    "number-generator": "^4.0.5",
    "prettier": "^2.2.1",
    "truffle": "^5.3.7",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.10.1",
    "ttypescript": "^1.5.12",
    "typechain": "^4.0.3",
    "typescript": "^4.2.4",
    "ws": "^7.4.5"
  },
  "scripts": {
    "build": "ttsc -p tsconfig.build.json",
    "watch": "ttsc -w",
    "lint": "eslint ./src --ext .ts",
    "bindings": "./scripts/genbindings.sh deps/erdstall-contracts",
    "test:integration": "env TS_NODE_PROJECT=\"tsconfig.e2e.json\" mocha -b --timeout 60000 -r jsdom-global/register -r ts-node/register -r tsconfig-paths/register 'src/e2e/**/*.spec.ts'",
    "test": "env TS_NODE_PROJECT=\"tsconfig.test.json\" mocha --timeout 15000 -r jsdom-global/register -r ts-node/register -r tsconfig-paths/register 'src/{,!(e2e)/**}/*.spec.ts'",
    "devpub": "yarn build && yarn postpublish",
    "postpublish": "ts-node ./scripts/publish_posthook.ts ./package.json ./dist/package.json"
  },
  "dependencies": {
    "ethers": "^5.4.1",
    "ethers-utils": "^2.1.11",
    "reflect-metadata": "^0.1.13",
    "typedjson": "^1.7.0"
  }
}
